<!DOCTYPE html>
<html lang="en">
<link rel="stylesheet" href="/css/style.css">

<%- include('../../partials/head') %>

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
  integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

<body>

  <%- include('../../partials/adm/header.ejs') %>

  <main>

    <table class="table">
      <thead>
        <tr>
          <th scope="col">Id:</th>
          <th scope="col">Nome:</th>
          <th scope="col">Valor:</th>
          <th scope="col">Imagem:</th>
          <th scope="col">Descrição:</th>
          <th scope="col">Ação:</th>
        </tr>
      </thead>
      <tbody>
        <% for (servico of servicos) { %>
          <tr> 
            <th scope="row"><%= servico.id %></th>
            <td><%= servico.nome %></td>
            <td><%= servico.preco %></td>
            <td>
              <% if(servico.imagem.substr(0, 5)== 'https') { %>
                <img src="<%= servico.imagem %>" alt="" class="sub-section-img" style=" width: 50px; height: 50px ">
                <% } else { %>
                <img src='/img/imagemServicos/<%= servico.imagem %>' alt="" class="sub-section-img" style=" width: 50px; height: 50px ">
                <% } %>
            </td>
            <td><%= servico.descricao %></td>
            <td>
              <a href="/servicos/adm/atualizar/<%= servico.id %>" class="btn btn-primary">Editar</a>
              <a href="/servicos/adm/visualizar/<%= servico.id %>" class="btn btn-success">Visualizar</a>
              <form action="/servicos/adm/delete/<%= servico.id %>?_method=DELETE" method="POST">
                <button type="submit" class="btn btn-danger">
                  Deletar
                </button>
              </form>
            </td>
          </tr>
          <% } %>
      </tbody>
    </table>

    <a href="/servicos/adm/cadastrar" class="btn btn-info">Cadastrar</a>

  </main>

  <%- include('../../partials/footer') %>

</body>

</html>